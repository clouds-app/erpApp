
.header{
	position: relative;
}
.notice{
	width: 80%;
	margin-left: 10%;
	position: absolute;
	bottom: -30rpx;
	color: #333333;
	padding: 15rpx;
	font-size: 32rpx;
	text-align: center;
	overflow: hidden;
	white-space: nowrap;
}
.notice-content {
	-webkit-animation: 10s wordsLoop linear infinite normal;
	        animation: 10s wordsLoop linear infinite normal;
}
@keyframes wordsLoop {
0% {
                transform: translateX(200px);
                -webkit-transform: translateX(200px);
}
100% {
                transform: translateX(-100%);
                -webkit-transform: translateX(-100%);
}
}
@-webkit-keyframes wordsLoop {
0% {
                transform: translateX(200px);
                -webkit-transform: translateX(200px);
}
100% {
                transform: translateX(-100%);
                -webkit-transform: translateX(-100%);
}
}
.example-title {
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
		-webkit-box-pack: justify;
		-webkit-justify-content: space-between;
		        justify-content: space-between;
		-webkit-box-align: center;
		-webkit-align-items: center;
		        align-items: center;
		font-size: 32rpx;
		color: #464e52;
		padding: 30rpx;
		margin-top: 20rpx;
		position: relative;
		background-color: #fdfdfd
}
.example-title:after {
		content: '';
		position: absolute;
		left: 0;
		margin: auto;
		top: 0;
		bottom: 0;
		width: 20rpx;
		height: 40rpx;
		border-top-right-radius: 20rpx;
		border-bottom-right-radius: 20rpx;
		background-color: #0081ff
}
.example .example-title {
		margin: 40rpx 0
}
.example-body {
		border-top: 1px #f5f5f5 solid;
		background: #fff
}
.example-info {
		padding: 30rpx;
		color: #3b4144;
		background: #fff
}
.image {
		width: 50rpx;
		height: 50rpx;
}
.text {
		font-size: 26rpx;
		margin-top: 10rpx;
		color: #000000 !important;
}
.cu-item{
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
		-webkit-box-align: center;
		-webkit-align-items: center;
		        align-items: center;
		padding-bottom: 20px;
}
.no-border{
		padding: 0;
}

